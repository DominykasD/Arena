<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FF9800">

    <Button
        android:id="@+id/button"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/orange_background"
        android:backgroundTintMode="add"
        android:foregroundTint="@color/colorPrimary"
        android:text="@string/testi"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/teal_700"
        android:textColorHighlight="#772222"
        android:textColorHint="#501818"
        android:textColorLink="#602121"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/button3"
        android:layout_width="98dp"
        android:layout_height="111dp"

        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/pay_method_button"
        android:drawableTop="@drawable/ic_outline_credit_card_24"
        android:drawableTint="#535353"
        android:paddingTop="16dp"
        android:radius="30dp"

        android:text="@string/kreditine_kortele"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#535353"
        android:textColorHighlight="#772222"
        android:textColorHint="#501818"
        android:textColorLink="#602121"
        app:iconPadding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView26"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/button4"
        android:layout_width="98dp"
        android:layout_height="111dp"

        android:layout_marginStart="20dp"
        android:background="@drawable/pay_method_button"
        android:drawableTop="@drawable/debit_card"
        android:drawableTint="#535353"
        android:radius="30dp"
        android:text="@string/debitine_kortele"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#535353"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/button3"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/button5"
        android:layout_width="98dp"
        android:layout_height="111dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/pay_method_button"
        android:drawableTop="@drawable/paypal"
        android:drawableTint="#535353"
        android:paddingLeft="0dp"
        android:paddingTop="12dp"
        android:radius="30dp"
        android:text="@string/paypal"

        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#535353"
        android:textColorHighlight="#772222"
        android:textColorHint="#501818"
        android:textColorLink="#602121"
        app:layout_constraintBottom_toBottomOf="@+id/button4"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@+id/button4"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/button6"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/gray_background"
        android:drawableLeft="@drawable/ic_add"
        android:drawableTint="#535353"
        android:radius="30dp"
        android:text="@string/prideti_mokejimo_kortele"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#535353"
        android:textColorHighlight="#772222"
        android:textColorHint="#501818"
        android:textColorLink="#602121"

        app:icon="@android:drawable/ic_input_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        tools:ignore="TextContrastCheck" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="412dp"
        android:layout_height="129dp"
        android:background="@color/teal_700"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="4dp"
        android:text="@string/data"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textView24"
        app:layout_constraintStart_toStartOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="16dp"
        android:text="@string/suma"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:text="@string/mokejimo_budas"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toEndOf="@+id/textView47"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:autoText="false"
        android:background="#00FFFFFF"
        android:text="@string/date_number"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textView24"
        app:layout_constraintEnd_toEndOf="@+id/textView37" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/eur_symbol"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textView24"
        app:layout_constraintEnd_toStartOf="@+id/textView38" />

    <TextView
        android:id="@+id/textView47"
        android:layout_width="18dp"
        android:layout_height="19dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/orange_background"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:text="@string/two"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        app:layout_constraintCircleRadius="5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="44dp"
        android:layout_height="35dp"
        android:rotationY="190"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/arrow_right" />

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="161dp"
        android:layout_height="32dp"
        android:background="@drawable/teal_border"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:paddingRight="5dp"
        android:stretchColumns="0,1,2"
        android:textAlignment="center"
        android:translationY="30px"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar">

        <TextView
            android:id="@+id/textView48"
            android:layout_width="18dp"
            android:layout_height="19dp"
            android:background="@drawable/gray_background"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:text="@string/one"
            android:textColor="@color/teal_700"
            android:textColorHighlight="@color/white"
            android:translationX="-50px"
            app:layout_constraintBottom_toBottomOf="@+id/textView26"
            app:layout_constraintCircleRadius="5sp"
            app:layout_constraintEnd_toStartOf="@+id/textView26" />

        <TextView
            android:id="@+id/textView49"
            android:layout_width="18dp"
            android:layout_height="19dp"
            android:background="@drawable/orange_background"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:text="@string/two"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/textView26"
            app:layout_constraintCircleRadius="5sp"
            app:layout_constraintEnd_toStartOf="@+id/textView26" />

        <TextView
            android:id="@+id/textView50"
            android:layout_width="18dp"
            android:layout_height="19dp"
            android:background="@drawable/gray_background"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:text="@string/three"
            android:textColor="@color/teal_700"
            android:textColorHighlight="@color/white"
            android:translationX="50px"
            app:layout_constraintBottom_toBottomOf="@+id/textView26"
            app:layout_constraintCircleRadius="5sp"
            app:layout_constraintEnd_toStartOf="@+id/textView26" />
    </TableRow>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcViewAddCard"
        android:layout_width="331dp"
        android:layout_height="209dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

</androidx.constraintlayout.widget.ConstraintLayout>