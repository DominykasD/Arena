<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Arena"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.LocationSeatActivity"
            android:exported="false"
            android:theme="@style/AppBar.NoActionBar_LoginRegistration" />
        <activity
            android:name=".activities.LocationActivity"
            android:exported="false"
            android:theme="@style/AppBar.NoActionBar_LoginRegistration" />
        <activity
            android:name=".activities.CheckoutConfirmActivity"
            android:exported="false"
            android:theme="@style/AppBar.NoActionBar" />
        <activity
            android:name=".activities.CheckoutCardActivity"
            android:exported="false"
            android:theme="@style/AppBar.NoActionBar" />
        <activity
            android:name=".activities.CheckoutPersonalActivity"
            android:exported="false"
            android:theme="@style/AppBar.NoActionBar" />
        <activity
            android:name=".activities.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/AppBar.NoActionBar_LoginRegistration">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CheckoutActivity"
            android:exported="false"
            android:theme="@style/AppBar.NoActionBar" />
        <activity
            android:name=".activities.CategoryActivity"
            android:exported="false"
            android:theme="@style/AppBar.NoActionBar_Category" />
        <activity
            android:name=".activities.MainMenuActivity"
            android:exported="false"
            android:theme="@style/AppBar.NoActionBar" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:theme="@style/AppBar.NoActionBar_LoginRegistration" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/AppBar.NoActionBar_LoginRegistration" />
    </application>

</manifest>